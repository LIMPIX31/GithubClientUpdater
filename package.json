{
  "name": "github-client-updater",
  "version": "1.0.0",
  "description": "a system for updating a local directory based on comparing it with a remote github repository",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "test": "jest --config jestconfig.json",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare" : "npm run build",
    "prepublishOnly" : "npm test && npm run lint",
    "preversion" : "npm run lint",
    "version" : "npm run format && git add -A src",
    "postversion" : "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LIMPIX31/GithubClientUpdater.git"
  },
  "keywords": [
    "github",
    "update"
  ],
  "author": "LIMPIX31",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/LIMPIX31/GithubClientUpdater/issues"
  },
  "homepage": "https://github.com/LIMPIX31/GithubClientUpdater#readme",
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "jest": "^27.2.4",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.5",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.4.3"
  }
}
